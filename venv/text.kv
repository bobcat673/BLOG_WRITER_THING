RootWidget:
#:import time time

<RootWidget>:
    screen_manager: screen_manager
    ScreenManager:
        id: screen_manager
        current: 'main_menu'
        pos: root.pos
        size: root.size
        MainMenu:
            screen_manager: root
            size: root.size
            pos: root.pos
        OtherMenu:
            screen_manager: root
            size: root.size
            pos: root.pos
        Third:
            screen_manager: root
            size: root.size
            pos: root.pos
<MainMenu>:
    screen_manager: self.screen_manager
    FloatLayout:
        Button:
            id: butt2on
            text: "submit"
            size_hint: 1 , 0.2
            on_press: root.button_hit()
            on_press: root.screen_manager.set_state(root.name)
        Label:
            id:header
            text: "Enter the number of links hit submit to move forward!"
            font_size: 25
            color: (1,0,0,1)

            pos_hint: {"x":0, "top":1.4}


        TextInput:
            id:number_input
            hint_text:'Enter number of links hit submit to move forward!'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.95, 0.5

<OtherMenu>:
    screen_manager: self.screen_manager
    FloatLayout:
        Button:
            id: butt2on
            text: "submit"
            size_hint: 1 , 0.2
            on_press:  root.screen_manager.set_state(root.name)
            on_release: root.submit()
        Label:
            id:header
            text: "Enter amazon links seprated by a comma hit submit to finish"
            font_size: 25
            color: (1,0,0,1)
            pos_hint: {"x":0, "top":1.4}


        TextInput:
            id:textput
            hint_text:'Enter links seprated by a comma hit submit to finish'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.95, 0.5


<Third>:
    screen_manager: self.screen_manager
    FloatLayout:
        Label:
            text: "working please wait"
            font_size:50
            pos_hint:{'center_y': 0.7}
        Label:
            text: "may take a minute or two"
            font_size:50
            pos_hint:{'center_y': 0.4}

