
<thingy>:
    ScreenManager:
        screen_manager: screen_manager
        id: screen_manager
        current: "first_screen"
        pos: root.pos
        size: root.size
        FirstScreen:
            screen_manager: root
            size: root.size
            pos: root.pos
        SecondScreen:
            screen_manager: root
            size: root.size
            pos: root.pos





<FirstScreen>:
    screen_manager: self.screen_manager
    name: "first_screen"
    background: ( 1 , 1 , 1 , 1 )
    orientation: "vertical"
    FloatLayout:
        Button:
            id: butt2on
            text: "submit"
            size_hint: 0.3 , 0.3
            on_press: root.button_hit()
            on_press: root.screen_manager.set_state = 'second_screen'
        Label:
            id:header
            text: "Enter ur number of links!"
            font_size: 50
            color: (1,0,0,1)
            pos_hint: {"x":0, "top":1.4}


        TextInput:
            id:number_input
            hint_text:'Enter number of links hit submit to move forward'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.95, 0.5




<SecondScreen>:
    name: 'second_screen'
    background: ( 1 , 1 , 1 , 1 )
    orientation: "vertical"
    FloatLayout:
        Button:
            id: butt2on
            text: "submit"
            size_hint: 0.3 , 0.3
        Label:
            id:header
            text: "Enter ur links!"
            font_size: 50
            color: (1,0,0,1)
            pos_hint: {"x":0, "top":1.4}


        TextInput:
            id:textput
            hint_text:'Enter links hit submit to finish'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.95, 0.5